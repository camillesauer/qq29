<div class="container-ok">
<%= render "components/header" %>
<body style="background-color:#FF0000;">
<!--Carousel Wrapper-->
<div class="img-back-blanc"><%= link_to(image_tag("cc.png", alt: "Gust - all rights reserved."), root_path) %></div>
<div id="carousel-example-1z" class="carousel slide carousel-fade carousel-bottom" data-ride="carousel">
  <!--Indicators-->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-1z" data-slide-to="1"></li>
    <li data-target="#carousel-example-1z" data-slide-to="2"></li>
  </ol>
  <!--/.Indicators-->
  <!--Slides-->
  <div class="carousel-inner" role="listbox">
    <!--First slide-->
    <div class="carousel-item active">
      <img class="d-block w-100 img-diapo" src="https://res.cloudinary.com/dntdrod1i/image/upload/v1598518672/Banni%C3%A8re-projet/Capture_d_%C3%A9cran_2020-08-27_%C3%A0_10.52.54_o6usnr.png"
        alt="First slide">
        <div class="card-trip-infos-deux">
        <h3>Prochainement</h3>
        <h2>ELLES</h2>
        <h3>Nina Cholet & Clothilde Matta</h3>
        <p>09/20 - Paris</p>
      </div>
    </div>
    <!--/First slide-->
    <!--Second slide-->
    <div class="carousel-item">
      <img class="d-block w-100 img-diapo" src="https://mdbootstrap.com/img/Photos/Slides/img%20(129).jpg"
        alt="Second slide">
      <div class="card-trip-infos-deux">
        <h2>Le syndrome de Stendhal</h2>
        <h3>Gérald Foltete</h3>
        <p>10/20 - Paris</p>
      </div>
    </div>
    <!--/Second slide-->
    <!--Third slide-->
    <div class="carousel-item">
      <img class="d-block w-100 img-diapo" src="https://mdbootstrap.com/img/Photos/Slides/img%20(70).jpg"
        alt="Third slide">
        <div class="card-trip-infos-deux">
        <h2>Title here</h2>
        <h3>Title here</h3>
        <p>Short description here!</p>
      </div>
    </div>
    <!--/Third slide-->
  </div>
  <!--/.Slides-->
  <!--Controls-->
  <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  <!--/.Controls-->
</div>

<% if user_signed_in? %>
<div class="flex-admin-deux"><%= link_to "Ajouter", new_article_path %></div>
<% end %>

<div class="display-grid-card">
  <% @article.each do |article| %>
    <div class="card-trip">
      <% if user_signed_in? %>
        <div class ="flex-admin">
          <%= link_to 'Supprimer', article_path(article),
            method: :delete,
            data: { confirm: 'Êtes-vous certain de vouloir supprimer?' } %>
          <%= link_to "Editer", edit_article_path(article.id)%>
        </div>
      <% end %>
          <%= image_tag("#{article.image_url}") %>
        <div class="card-trip-infos">
          <div>
            <h2><%= article.title %></h2>
            <h3><%= article.sous_titre %></h3>
            <p><%= article.lieu %></p>
          </div>
          <div class="card-trip-plus">
            <h4 class="card-trip-pricing"><%= article.date %></h4>
            <%= link_to "En savoir plus", article_path(article.id)%>
            </div>
        </div>

    </div>
  <% end %>
</div>

<%= render "components/footer" %>
</body>
</div>
