    <!--/Third slide-->
        <div class="carousel-item">
          <div><div class="overlay"></div></div>
      <img class="d-block w-100 img-diapo" src="https://res.cloudinary.com/dntdrod1i/image/upload/v1598966082/Banni%C3%A8re-projet/thumb_IMG_2223_1024_clair_gwqhc1.jpg"
