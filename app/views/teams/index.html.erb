<div class="container-ok">
<%= render "components/header" %>

<% if user_signed_in? %>
<div class="flex-admin-trois"><%= link_to "Ajouter une catégorie", new_category_path %></div>
<% end %>

<% if user_signed_in? %>
<div class="flex-admin-trois"><%= link_to "Ajouter un avatar", new_avatar_path %></div>
<% end %>


<div class="color-div-avatar-red">
  <h1 class="text-avatar-center-w">Bureau Exécutif</h1>
<div class="display-grid-avatar">
    <% category= "" %>
    <% Avatar.order(:category_id).each do |avatar| %>
      <% if avatar.category.name == "Bureau exécutif" %>

          <div class="card-trip card-trip-avatar ">
            <% if user_signed_in? %>
              <div class ="flex-admin">
                <%= link_to 'Supprimer', avatar_path(avatar),
                  method: :delete,
                  data: { confirm: 'Êtes-vous certain de vouloir supprimer?' } %>
                <%= link_to "Editer", edit_avatar_path(avatar.id)%>
              </div>
          <% end %>
          <div class="avatar-large" alt="avatar-large"> <%= image_tag("#{avatar.img_url}") %> </div>


                <h2><%= avatar.prenom %>&nbsp;<%= avatar.nom %></h2>
                <p><%= avatar.role %></p>
                <%= link_to "En savoir plus", avatar.bio_url %>



        </div>
        <% end %>
         <% end %>
</div>
</div>

